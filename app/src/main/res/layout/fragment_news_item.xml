<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/news_card_view_margin"
    app:contentPaddingBottom="@dimen/common_padding"
    app:contentPaddingTop="@dimen/common_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/RegularText.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/common_padding"
            tools:text="Title" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/common_padding"
            tools:ignore="ContentDescription"
            tools:src="@android:drawable/ic_menu_help" />

        <TextView
            android:id="@+id/date"
            style="@style/RegularText.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding"
            android:gravity="end"
            android:paddingHorizontal="@dimen/common_padding"
            tools:text="01.01.20 14:00" />

    </LinearLayout>


</androidx.cardview.widget.CardView>
