<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/common_padding">

        <TextView
            android:id="@+id/title"
            style="@style/RegularText.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_padding"
            tools:text="Title" />

        <TextView
            android:id="@+id/description"
            style="@style/RegularText.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_padding"
            android:layout_marginTop="@dimen/common_padding"
            tools:text="Description" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding"
            tools:ignore="ContentDescription"
            tools:layout_height="250dp"
            tools:src="@android:drawable/ic_menu_help" />

        <TextView
            android:id="@+id/date"
            style="@style/RegularText.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_padding"
            android:layout_marginTop="@dimen/common_padding"
            android:gravity="end"
            android:paddingHorizontal="@dimen/common_padding"
            tools:text="01.01.20 14:00" />

    </LinearLayout>

</ScrollView>